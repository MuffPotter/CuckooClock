<?xml version="1.0" encoding="utf-8" ?>

<ContentView x:Class="Sigeko.CuckooClock.Controls.TabButton"
      xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:controls="clr-namespace:Sigeko.CuckooClock.Controls;assembly=Sigeko.CuckooClock">

	<Grid x:Name="MainGrid">

		<controls:RoundedBoxView x:Name="BoxView"
							     InputTransparent="True"
							     IsEnabled="False"
								 CornerRadius="3" />

		<StackLayout x:Name="MainPanel"
					 Spacing="0"
					 HorizontalOptions="CenterAndExpand"
					 VerticalOptions="CenterAndExpand">

			<Label x:Name="LabelText1"
				   FontSize="13"
				   FontAttributes="Bold"
				   Text="LabelText1"
				   LineBreakMode="NoWrap"
				   HorizontalOptions="Center"
				   VerticalOptions="Center"
				   TranslationY="2"
				   TextColor="White"/>

			<Label x:Name="LabelText2"
				   FontSize="13"
				   FontAttributes="Bold"
				   Text="LabelText2"
				   LineBreakMode="NoWrap"
				   HorizontalOptions="Center"
				   VerticalOptions="Center"
				   TextColor="White"/>

		</StackLayout>

	</Grid>

</ContentView>
