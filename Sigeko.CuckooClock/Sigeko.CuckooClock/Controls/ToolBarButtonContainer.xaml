<?xml version="1.0" encoding="utf-8" ?>

<ContentView x:Class="Sigeko.CuckooClock.Controls.ToolBarButtonContainer"
      xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:controls="clr-namespace:Sigeko.CuckooClock.Controls;assembly=Sigeko.CuckooClock">

	<Grid x:Name="MainGrid"
		  Padding="0">

		<StackLayout x:Name="ButtonPanel"
					 Orientation="Horizontal"
					 HorizontalOptions="End">

			<controls:TabButton x:Name="Button1"
								Text="Button1" />
			<controls:TabButton x:Name="Button2"
								Text="Zeile1-Zeile2" />
			<controls:TabButton x:Name="Button3"
								Text="Button3" />

		</StackLayout>
	</Grid>

</ContentView>
